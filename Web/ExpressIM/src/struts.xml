<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="expressway-parent" extends="json-default">
		<interceptors>
	         <interceptor name="authenticationInterceptor" class="com.stardust.express.interceptors.AuthenticationInterceptor"/>
	    </interceptors>
	</package>

    <package name="expressway-debug" extends="expressway-parent">
	    <action name="loadUser" class="com.stardust.express.actions.UserAction" method="loadUser">
	    	<interceptor-ref name="authenticationInterceptor" />
	    	<result name="invalid_session" type="redirect">index.html</result>
	        <result name="success" type="json"></result>
	        <result name="permission_denied" type="stream">
                 <param name="contentType">text/html</param>
                 <param name="inputName">stringResponse</param>
            </result>
	    </action>
	</package>
	
	<package name="expressway-maintenance" extends="expressway-parent">
	    <action name="maintenance" class="com.stardust.express.actions.MaintenanceAction" method="maint">
	        <result name="success" type="json"></result>
	    </action>
	</package>
</struts>
