<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
              android:layout_weight="2"
              android:id="@+id/product_parent_list"
              android:overScrollMode="never"
              android:scrollbars="none"
              android:fadeScrollbars="false"
              android:choiceMode="singleChoice"/>

    <TextView android:layout_width="1dp" android:layout_height="match_parent"
              android:background="#eeeeee"/>

    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/product_child_list"
              android:choiceMode="singleChoice"
              android:overScrollMode="never"
              android:scrollbars="none"
              android:fadeScrollbars="false"
              android:layout_weight="1"/>
</LinearLayout>